{% extends "KcbBonnligaWebsiteBundle:Layout:base.html.twig" %}

{% block title %}
Rangliste
{% endblock%}

{% block body %}
    {% set mapping={'gleich': 'minus', 'steigend': 'chevron-up', 'fallend': 'chevron-down'} %}

    <div class="span12">
        <table class="table table-striped table-condensed ranking">
            <thead>
                <tr>
                    <th>Rang</th>
                    <th></th>
                    <th>Name</th>
                    <th>Einstufung</th>
                    <th>Geschlecht</th>
                    <th>Stammlokal</th>
                    <th>Punkte</th>
                    <th>Teilnahmen</th>
                </tr>
            </thead>
            <tbody>
            {% for rang in rangliste.raenge %}
                <tr>
                    <td>{{rang.rang}}</td>
                    <td>
                        <i class="icon-large icon-{{mapping[rang.tendenz]}}"></i>
                    </td>
                    <td>{{rang.spieler.name}}</td>
                    <td>{{rang.spieler.einstufung}}</td>
                    <td>{{rang.spieler.geschlecht}}</td>
                    <td>{{rang.spieler.stammlokal.name}}</td>
                    <td>{{rang.punkte}}</td>
                    <td>{{rang.teilnahmen}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}